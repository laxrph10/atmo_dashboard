<div class="brand" data-id="<%=@brand.id%>">
  <div class="header-panel">
    <img src= "<%=@brand.avatar_img%>", width="80", class="avatar"><br>
    <img src= "<%=@brand.header_img%>", width="400", class="header"><br>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td colspan="2"></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><strong>Brand</strong></td>
        <td><%=@brand.brand_name%></td>
      </tr>
      <tr>
        <td><strong>Website</strong></td> 
        <td><%=@brand.website%></td>
      </tr>
      <tr>
        <td><strong>Phone</strong></td>
        <td><%=@brand.phone%></td>
      </tr>
      <tr>
        <td><strong>Email</strong></td>
        <td><%=@brand.email%></td>
      </tr>
      <tr>
        <td><strong>Address</strong></td>
        <td><address><%=@brand.address%></address></td>
      </tr>
      <tr>
        <td><strong>Description</strong></td>
        <td><%=@brand.description%></td>
      </tr>
    </tbody>
  </table>
  <button class="edit btn btn-info round2">Edit</button>
</div>